FROM ubuntu:devel

ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get update
RUN apt install -y build-essential
RUN apt install -y \
	bash-completion \
	binutils-dev \
	cmake \
	gcc \
	git \
	libc6 \
	libcapstone-dev \
	libelf-dev \
	libssl-dev \
	libunwind-dev \
	util-linux

COPY . /src
WORKDIR /src
RUN cmake -B /build
RUN make -C /build -j$(nproc)
ENTRYPOINT ["/build/src/ulpatch"]
